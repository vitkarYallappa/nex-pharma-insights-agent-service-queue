# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION EXAMPLE
# ============================================================================
# Copy this file to .env.production and update with your actual values
# Or use deployment/production.env (which takes priority)

# Application Settings
ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=8005

# AWS Configuration
AWS_REGION=us-east-1
# Leave AWS credentials empty to use IAM instance role in production
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# Database
DATABASE_TYPE=dynamodb
DYNAMODB_REGION=us-east-1

# Storage
STORAGE_TYPE=s3
S3_BUCKET_NAME=your-production-bucket-name

# API Keys (REQUIRED - Replace with your actual keys)
PERPLEXITY_API_KEY=your-perplexity-api-key-here
SERP_API_KEY=your-serp-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Security
SECRET_KEY=your-production-secret-key-change-this

# Logging
LOG_LEVEL=INFO 