# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# This configuration is designed for EC2 instances with IAM instance roles
# No explicit AWS credentials needed - uses instance metadata service

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=production
TABLE_ENVIRONMENT=prod
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8005

# ============================================================================
# AWS CONFIGURATION (IAM Instance Role)
# ============================================================================
# AWS Region (required)
AWS_REGION=us-east-1

# DO NOT SET THESE IN PRODUCTION - Use IAM instance role instead
# AWS_ACCESS_KEY_ID=  # Leave empty to use instance role
# AWS_SECRET_ACCESS_KEY=  # Leave empty to use instance role

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_TYPE=dynamodb
# No DYNAMODB_ENDPOINT for production (uses AWS DynamoDB)
DYNAMODB_REGION=us-east-1

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================
STORAGE_TYPE=s3
S3_BUCKET_NAME=nex-pharma-insights-production-bucket
# No S3_ENDPOINT_URL for production (uses AWS S3)

# ============================================================================
# BEDROCK CONFIGURATION
# ============================================================================
BEDROCK_MOCK_MODE=false
BEDROCK_AWS_REGION=us-east-1
# Bedrock credentials will use IAM instance role
# BEDROCK_AWS_ACCESS_KEY_ID=  # Leave empty to use instance role
# BEDROCK_AWS_SECRET_ACCESS_KEY=  # Leave empty to use instance role

# Bedrock Agent Configuration
BEDROCK_AWS_BEDROCK_AGENT_ID=your-bedrock-agent-id-here
BEDROCK_AWS_BEDROCK_AGENT_ALIAS_ID=your-bedrock-agent-alias-id-here

# ============================================================================
# EXTERNAL API KEYS (Set these with your actual keys)
# ============================================================================
PERPLEXITY_API_KEY=your-perplexity-api-key-here
SERP_API_KEY=your-serp-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ============================================================================
# QUEUE CONFIGURATION
# ============================================================================
QUEUE_POLL_INTERVAL=5
QUEUE_BATCH_SIZE=10
MAX_RETRIES=3
TASK_DELAY_SECONDS=3

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
SECRET_KEY=your-production-secret-key-change-this
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/nex-pharma-insights/app.log

# ============================================================================
# PROCESSING CONFIGURATION
# ============================================================================
DEFAULT_PRIORITY=medium
DEFAULT_PROCESSING_STRATEGY=table
DEFAULT_QUALITY_THRESHOLD=0.8
MAX_CONTENT_SIZE=10485760
CONTENT_TIMEOUT=30 