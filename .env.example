# ============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and update with your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=local
TABLE_ENVIRONMENT=local
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8005

# ============================================================================
# AWS CONFIGURATION (Local Development)
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_TYPE=dynamodb
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_REGION=us-east-1

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================
STORAGE_TYPE=minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
S3_BUCKET_NAME=nex-pharma-insight-s3-bucket

# ============================================================================
# BEDROCK CONFIGURATION
# ============================================================================
BEDROCK_MOCK_MODE=false
BEDROCK_AWS_REGION=us-east-1
BEDROCK_AWS_ACCESS_KEY_ID=your-bedrock-access-key
BEDROCK_AWS_SECRET_ACCESS_KEY=your-bedrock-secret-key

# Bedrock Agent Configuration - UPDATE THESE WITH YOUR ACTUAL VALUES
BEDROCK_AWS_BEDROCK_AGENT_ID=your-bedrock-agent-id-here
BEDROCK_AWS_BEDROCK_AGENT_ALIAS_ID=your-bedrock-agent-alias-id-here

# ============================================================================
# EXTERNAL API KEYS (Set these with your actual keys)
# ============================================================================
PERPLEXITY_API_KEY=your-perplexity-api-key-here
SERP_API_KEY=your-serp-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# ============================================================================
# QUEUE CONFIGURATION
# ============================================================================
QUEUE_POLL_INTERVAL=5
QUEUE_BATCH_SIZE=10
MAX_RETRIES=3
TASK_DELAY_SECONDS=3

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
SECRET_KEY=your-local-secret-key-change-this
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log

# ============================================================================
# PROCESSING CONFIGURATION
# ============================================================================
DEFAULT_PRIORITY=medium
DEFAULT_PROCESSING_STRATEGY=table
DEFAULT_QUALITY_THRESHOLD=0.8
MAX_CONTENT_SIZE=10485760
CONTENT_TIMEOUT=30
